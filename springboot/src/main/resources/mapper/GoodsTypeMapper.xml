<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.exam.mapper.GoodsTypeMapper">

    <insert id="insert" parameterType="org.exam.entity.GoodsType">
        INSERT INTO `goods_type`(name)
        VALUES (#{name})
    </insert>

    <update id="updateById" parameterType="org.exam.entity.GoodsType">
        update goods_type set name=#{name}
        where id=#{id}
    </update>

    <select id="selectAll" resultType="org.exam.entity.GoodsType">
        select * from goods_type
        <where>
            <if test="name!=null"> name like concat('%',#{name},'%')</if>
        </where>
    </select>

</mapper>
